<%- include('../partials/header') %>

<section>
  <h1>Add New Ticket</h1>
  <form action="/tickets/<%= flight.id %>" method="POST">
    <div class="form-group">
      <label>Seat</label>
      <p>Example: A38</p>
      <input
        class="form-control"
        name="seat"
        type="text"
        required
        pattern="[A-F][1-9]\d?"
      />
    </div>
    <div class="form-group">
      <label>Price</label>
      <input class="form-control" type="number" name="price" />
    </div>
    <input class="btn btn-primary" type="submit" value="Add Ticket" />
  </form>
</section>

<%- include('../partials/footer') %>
